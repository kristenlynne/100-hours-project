<!-- when an account w/ that email address or username already exists to changes the formatting of this layout to have the labels next to the input instead of above -->

<%- include('partials/header') -%>

    <main class="container mx-auto p-6">
        <div class="flex justify-center">
            <section class="p-6 border-2 rounded-lg bg-base-200">
              <!-- <h1 class="text-center font-bold text-3xl uppercase pb-6">Sign up for book club</h1> -->
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="mb-3">
                        <label for="userName" class="">User Name</label>
                        <input type="text" class="input input-bordered input-secondary w-full max-w-xs" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="">Email address</label>
                      <input type="email" class="input input-bordered input-secondary w-full max-w-xs" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="input input-bordered input-secondary w-full max-w-xs" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="input input-bordered input-secondary w-full max-w-xs" id="confirmPassword" name="confirmPassword">
                    </div>
                    <div class="flex justify-center pt-4">
                      <button type="submit" class="btn btn-primary btn-wide">Sign Up</button>
                    </div>
                  </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>